{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.ghost" : {
			"initial_state" : "default",
			"states" : {
				"default": {
					"animations": ["default"],
                    "transitions":[
                        {"angry": "query.is_angry"}
                    ],
					"blend_transition":0.2
                },
				"angry": {
					"animations": ["angry"],
                    "transitions":[
                        {"default": "!query.is_angry"}
                    ],
					"blend_transition":0.2
                }
			}
		}
	}
}
