{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.darkness_stalker" : {
			"initial_state" : "idle",
			"states" : {
				"pose": {
					"animations": ["idle"],
                    "transitions":[
						{"idle": "!query.ground_speed"}
                    ],
					"blend_transition":0.4
                },
				"walk": {
					"animations": ["walk","idle","pose"],
                    "transitions":[
						{"idle": "!query.ground_speed"}
                    ],
					"blend_transition":0.4
                },
				"idle": {
					"animations":[ "idle","pose" ],
                    "transitions":[
                        {"walk": "query.ground_speed"}
                    ],
					"blend_transition":0.4
                }
			}
		}
	}
}
