					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:damage_sensor": {
				"triggers": [
					
					{
						"on_damage": {
							"filters": {
								"all_of": [
									{
										"test": "is_family",
										"subject": "other",
										"value": "player"
									}
								]
							},
							"event": "minecraft:angry"
						},
						"deals_damage": true
					},
					{
					  "on_damage": {
						"filters": {
						  "all_of": [
							{ "test": "has_damage", "value": "attack" },
							{ "test": "has_component", "subject": "self", "operator": "!=", "value": "minecraft:is_stunned" }
