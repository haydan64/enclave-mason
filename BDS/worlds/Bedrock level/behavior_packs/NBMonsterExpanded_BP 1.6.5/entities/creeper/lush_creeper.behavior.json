					"event": "particle"
					
				  }
			},
			"nbadead1": {
				"minecraft:transformation": {
					"delay": 0,
					"into": "nba:lush_creeper_corpse"
				  }
			},
			"nba:stunned":{
				"minecraft:is_stunned":{},
				"minecraft:timer": {
