		"events": {
			"minecraft:entity_spawned": {
				"randomize": [
					{
						"weight": 250,
						"remove": {},
						"add": {
							"component_groups": ["nba:creeper"]
						}
					}
					
					]
			},
			"particle":{
				"queue_command": {
					"command": [
						"particle nba:poison_particle ~ ~1.1 ~"
					]
				}
			},
			"minecraft:angry": {
				"remove": {
					"component_groups": [
					  "nba:creeper"
					]
				  },
				  "add": {
					"component_groups": [
					  "nba:angry"
					]
				  }
			},
			"stunned": {
				"add": {
				  "component_groups": [
					"nba:stunned"
				  ]
				}
			},
			"notstunned": {
				"remove": {
				  "component_groups": [
					"nba:stunned"
				  ]
				}
			},
			"corpse1": {
				"queue_command": {
					"command": [
						"particle nba:cloud_red_explosion ~~1~",
						"summon xp_orb ~ ~0.2 ~",
						"summon xp_orb ~ ~0.2 ~",
						"summon xp_orb ~ ~0.2 ~",
						"event entity @s corpseeffect1"
					]
				}
			},
			"corpseeffect1":{
				"add": {
					"component_groups": [
					  "nbadead1"
					]
				  }
			}
			
		}
