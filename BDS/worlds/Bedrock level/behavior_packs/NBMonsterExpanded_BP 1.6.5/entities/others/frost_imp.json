        },
        "minecraft:conditional_bandwidth_optimization": {
        }
      },
  
  
      "events": {
        "minecraft:become_angry": {
            "add": {
              "component_groups": [
                "angry"
              ]
            }
          },
          "minecraft:on_calm": {
            "remove": {
              "component_groups": [
                "angry"
              ]
            }
          }
      }
