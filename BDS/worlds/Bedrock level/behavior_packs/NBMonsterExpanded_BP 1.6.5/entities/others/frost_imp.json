        "minecraft:collision_box": {
          "width": 0.5,
          "height": 0.6
        },
        "minecraft:equipment": {
            "table": "loot_tables/gears/frost_imp.json"
        },
        "minecraft:loot": {
            "table": "loot_tables/drop_entities/frost_imp.json"
        },
        "minecraft:health": {
          "value": 10,
          "max": 10
        },
        "minecraft:hurt_on_condition": {
