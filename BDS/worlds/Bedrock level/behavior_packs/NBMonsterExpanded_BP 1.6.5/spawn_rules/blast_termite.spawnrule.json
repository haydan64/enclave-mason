{
    "format_version": "1.8.0",
    "minecraft:spawn_rules": {
      "description": {
        "identifier": "nba:blast_termite",
        "population_control": "monster"
      },
      "conditions": [
        {
          "minecraft:spawns_on_surface": {
          },

          "minecraft:herd": {
            "min_size": 2,
            "max_size": 5
          },
  
          "minecraft:weight": {
            "default": 50
          },
          
          "minecraft:biome_filter": [
            {
              "any_of": [
                {
                  "test": "has_biome_tag",
                  "operator": "==",
                  "value": "desert"
                },
                {
                  "test": "has_biome_tag",
                  "operator": "==",
                  "value": "jungle"
                }
              ]
            }
          ],
          "minecraft:brightness_filter": {
            "min": 0.0,
            "max": 15.0,
            "adjust_for_weather": false
          }
        }
      ]
    }
  }