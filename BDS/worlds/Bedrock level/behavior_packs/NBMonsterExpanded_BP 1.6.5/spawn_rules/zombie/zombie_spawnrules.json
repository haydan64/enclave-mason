{
    "format_version": "1.8.0",
    "minecraft:spawn_rules": {
      "description": {
        "identifier": "minecraft:zombie",
        "population_control": "monster"
      },
      "conditions": [
        {
          "minecraft:spawns_on_surface": {
          },
  
          "minecraft:brightness_filter": {
            "min": 0,
            "max": 7,
            "adjust_for_weather": true
          },
  
          "minecraft:difficulty_filter": {
            "min": "easy",
            "max": "hard"
          },
  
          "minecraft:weight": {
            "default": 0
          },
          "minecraft:permute_type": [
            {
              "weight": 95
            },
            {
              "weight": 5,
              "entity_type": "minecraft:zombie_villager_v2"
            }
          ],
          "minecraft:biome_filter": [
            {
              "all_of": [
                {
                  "test": "has_biome_tag",
                  "operator": "!=",
                  "value": "overworld"
                },
                {
                  "test": "has_biome_tag",
                  "operator": "!=",
                  "value": "ice"
                },
                {
                  "test": "has_biome_tag",
                  "operator": "!=",
                  "value": "jungle"
                },
                {
                  "test": "has_biome_tag",
                  "operator": "!=",
                  "value": "swamp"
                },
                {
                  "test": "has_biome_tag",
                  "operator": "!=",
                  "value": "desert"
                },
                
                {
                  "any_of": [
                    {
                      "test": "has_biome_tag",
                      "operator": "==",
                      "value": "monster"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }